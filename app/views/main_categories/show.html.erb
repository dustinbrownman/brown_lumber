<%= render 'layouts/sidebar', categories: @main_categories, this_category: @main_category %>

<div class="content">
	<h1><%= @main_category.name %></h1>
	<%= render_breadcrumbs %>
	<div class="products">
		<% @main_category.products.each do |product| %>
			<%= render 'products/product_thumbnail', product: product %>
		<% end %>
	</div>
</div>