<%= render 'layouts/sidebar', categories: @main_categories, this_category: @sub_category.main_category %>

<div class="content">
	<h1><%= @sub_category.name %></h1>
	<%= render_breadcrumbs %>

	<% if @sub_category.description %>
		<p class="lead">
			<%= @sub_category.description %>
		</p>
	<% end %>

	<%= render 'products/products_table', category: @sub_category %>
</div>